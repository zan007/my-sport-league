@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}

{{baseSelector}} {
	display: inline-block;
	line-height: 1;
}

{{baseSelector}}:before {
	display: inline-block;
	font-family: {{fontName}} !important;
	vertical-align: top;
}

{{#each codepoints}}
.{{../classPrefix}}{{@key}}:before {
	content: "\\{{this}}";
}
{{/each}}
